<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox id="mainViewRoot"
      alignment="CENTER"
      prefHeight="240.0"
      prefWidth="320.0"
      spacing="20.0"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
      fx:controller="org.jenhan.wowfeatureextractor.MainControl">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button id="installBtn"
            onAction="#installAddon"
            prefHeight="80.0"
            prefWidth="80.0"
            text="Install AddOn"
            textAlignment="CENTER"
            wrapText="true">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>

    <Button id="selectBtn"
            onAction="#selectInput"
            prefHeight="80.0"
            prefWidth="80.0"
            text="Select Input"
            textAlignment="CENTER"
            wrapText="true">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>

    <Button id="exportBtn"
            onAction="#exportToXML"
            prefHeight="80.0"
            prefWidth="80.0"
            text="Export XML"
            textAlignment="CENTER"
            wrapText="true">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>

</HBox>
